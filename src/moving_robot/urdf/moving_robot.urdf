<?xml version="1.0"?>
<robot name="moving_robot">

	<link name="base_footprint">
		<visual>
			<geometry>
				<cylinder length="0.01" radius="0.2"/>
			</geometry>
			<origin rpy="0 -0 0" xyz="0 0 0.04"/>
			<material name="white">
				<color rgba="1 1 1 1"/>
			</material>
		</visual>

		<collision>
			<geometry>
				<cylinder length="0.03" radius="0.2"/>
			</geometry>
			<origin rpy="0 0 0" xyz="0 0 0.04"/>
		</collision>

		<!--<inertial>
			<mass value="1"/>
			<inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
		</inertial>-->
	</link>

	<joint name="left_wheel_joint" type="revolute">
		<parent link="base_footprint"/>
		<child link="left_wheel_link"/>
		<origin xyz="0 0.15 0.04" rpy="0 0 0"/>
		<axis xyz="0 1 0"/>
		<limit effort="300" velocity="0.1" lower="-3.14" upper="3.14"/>
		<dynamics damping="0" friction="0"/>
	</joint>

	<link name="left_wheel_link">
		<visual>
			<geometry>
				<cylinder length="0.02" radius="0.05"/>
			</geometry>
			<origin rpy="1.570769 0 0" xyz="0 0.06 0"/>
			<material name="black">
				<color rgba="0 0 0 1"/>
			</material>
		</visual>

		<collision>
			<geometry>
				<cylinder length="0.02" radius="0.05"/>
			</geometry>
			<origin rpy="1.570796 0 0" xyz="0 0.06 0.04"/>
		</collision>

		<!--<inertial>
			<mass value="1"/>
			<inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
		</inertial>-->
	</link>

	<joint name="right_wheel_joint" type="revolute">
		<parent link="base_footprint"/>
		<child link="right_wheel_link"/>
		<origin xyz="0 -0.15 0.04" rpy="0 0 0"/> 
		<!--<limit effort="1000" velocity="0.1" lower="-0.1" upper="0.1"/>-->

		<axis xyz="0 1 0"/>
		<limit effort="300" velocity="0.1" lower="-3.14" upper="3.14"/>
		<dynamics damping="0" friction="0"/>
	</joint>

	<link name="right_wheel_link">
		<visual>
			<geometry>
				<cylinder length="0.02" radius="0.05"/>
			</geometry>
			<origin rpy="1.570796 0 0" xyz="0 -0.06 0"/>
			<material name="black">
				<color rgba="0 0 0 1"/>
			</material>
		</visual>

		<collision>
			<geometry>
				<cylinder length="0.02" radius="0.05"/>
			</geometry>
			<origin rpy="1.570796 0 0" xyz="0 -0.06 0.04"/>
		</collision>

		<!--<inertial>
			<mass value="1"/>
			<inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
		</inertial>-->
	</link>

	<link name="caster_wheel">
	    <visual>
	      <origin xyz="0 0 0" rpy="0 0 0"/>
	      <geometry>
	        <sphere radius="0.05"/>
	      </geometry>
	    </visual>
	    <collision>
	      <origin xyz="0 0 0" rpy="0 0 0"/>
	      <geometry>
	        <sphere radius="0.05"/>
	      </geometry>
	    </collision>

	  </link>
 
	  <joint name="caster_wheel_joint" type="continuous">
	    <axis xyz="0 1 0" rpy="0 0 0" />
	    <parent link="base_footprint"/>
	    <child link="caster_wheel"/>
	    <origin xyz="0.15 0 0" rpy="0 0 0"/>
	  </joint>	

</robot>


